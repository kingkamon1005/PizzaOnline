
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div style="display: flex; flex-wrap: wrap; justify-content: center; align-items: center; height: 60vh;">
    <div class="div-login">
        <form action="">
            <input class="hidden" name="user_value" />
            <input class="hidden" name="pass_value" />
        </form>
        <div class="row">
            <div class="col-lg-12">
                <span>User: </span>
                <input class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <span>Password: </span>
                <input class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <button type="button" class="btn btn-dark" onclick="submitLogin()">เข้าสู่ระบบ</button>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <button type="button" class="btn btn-info" onclick="RedirectTo('@Url.Action("Register", "Home")')">
                    สมัครสมาชิก
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function RedirectTo(url) {

        window.location.href = url
    }
</script>
